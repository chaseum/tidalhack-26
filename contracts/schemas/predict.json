{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ML Prediction",
  "description": "Schema for ML prediction endpoint.",
  "type": "object",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "inputs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "features": {
                "type": "array",
                "items": { "type": "number" }
              }
            },
            "required": ["id", "features"]
          }
        }
      },
      "required": ["inputs"]
    },
    "response": {
      "type": "object",
      "properties": {
        "predictions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "prediction": { "type": "string" },
              "confidence": { "type": "number" }
            },
            "required": ["id", "prediction", "confidence"]
          }
        }
      },
      "required": ["predictions"]
    }
  }
}