{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chat",
  "description": "Schema for chat endpoint.",
  "type": "object",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "conversation_id": { "type": "string" },
        "messages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": { "type": "string", "enum": ["user", "assistant"] },
              "content": { "type": "string" }
            },
            "required": ["role", "content"]
          }
        }
      },
      "required": ["messages"]
    },
    "response": {
      "type": "object",
      "properties": {
        "conversation_id": { "type": "string" },
        "messages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": { "type": "string", "enum": ["assistant"] },
              "content": { "type": "string" }
            },
            "required": ["role", "content"]
          }
        }
      },
      "required": ["conversation_id", "messages"]
    }
  }
}